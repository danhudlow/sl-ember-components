<div class="sl-split-grid-header">
    <div class="row">
        <div class="col-sm-6">
            <span class="sl-split-grid-title">{{title}}</span>
        </div>

        <div class="col-sm-6 text-right">
            {{#sl-button}}Filter{{/sl-button}}
        </div>
    </div>
</div>

<div class="sl-split-grid-content">
    <table class="table sl-split-grid-head">
        <thead>
            <tr>
                {{#each column in columns itemController="sl-split-grid-column"}}
                    <th {{bind-attr class="column.sizeClass"}}>{{column.title}}</th>
                {{/each}}

                {{#if rowActions}}
                    <th {{bind-attr style=actionsColumnStyle}}></th>
                {{/if}}
            </tr>
        </thead>
    </table>

    <div class="sl-split-grid-body">
        <table class="table table-hover">
            <tbody>
                {{#each row in content itemController="sl-split-grid-row"}}
                    <tr>
                        {{#each column in columns itemController="sl-split-grid-column"}}
                            <td {{bind-attr class="column.primaryClass column.sizeClass" style=column.style}}>{{split-grid-cell-value}}</td>
                        {{/each}}

                        {{#if rowActions}}
                            <td {{bind-attr style=actionsColumnStyle}}>
                                {{#sl-drop-button label=actionsButtonLabel size="sm"}}
                                    {{#each rowAction in rowActions}}
                                        {{sl-drop-option action=rowAction.action label=rowAction.label}}
                                    {{/each}}
                                {{/sl-drop-button}}
                            </td>
                        {{/if}}
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
