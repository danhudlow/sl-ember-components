{{#sl-button aria-expanded="false" class="dropdown-toggle" data-toggle="dropdown" size=size theme=theme type="button"}}
    {{#if view.label}}
        {{view.label}}
        <span {{bind-attr class=iconClass}}></span>
    {{else}}
        {{yield}}
    {{/if}}
{{/sl-button}}

<ul {{bind-attr class=":dropdown-menu alignRight:dropdown-menu-right"}} role="menu">
    {{#each content}}
        {{sl-drop-option action=action label=label}}
    {{else}}
        {{yield}}
    {{/each}}
</ul>
