{{#sl-button class="dropdown-toggle" data-toggle="dropdown" size=size type="button"}}
    {{#if view.label}}
        {{view.label}}
        <span {{bind-attr class=iconClass}}></span>
    {{else}}
        {{yield}}
    {{/if}}
{{/sl-button}}

<ul {{bind-attr class=":dropdown-menu alignRight:dropdown-menu-right"}} role="menu">
    {{yield}}
</ul>
