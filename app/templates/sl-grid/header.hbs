<header class="sl-grid row">
    <div class="col-sm-6 col-md-6 col-lg-6">
        {{sl-pagination-info 
            pagingData=pagingData 
            pagingInfo=translations.pagination.label}}
        {{sl-pagination-per-page-select 
            displaying=translations.pagination.displaying
            perPage=translations.pagination.perPage
            perPageOptions=pagingData.perPageOptions 
            itemCountPerPage=itemCountPerPage}}
    </div>
    <div class="col-sm-6 col-md-6 col-lg-6 text-right">
        {{sl-pagination-controls 
            action="changePage" 
            disabled=isLoading 
            currentPage=pagingData.currentPage 
            totalPages=pagingData.totalPages}}
        <div class="sl-grid-manipulation-buttons">
            {{#sl-button title="Refresh" action="reload"}}<i class="fa fa-refresh"></i>{{/sl-button}}
            {{#sl-button title="Filter" classNameBindings="showFilterPanel:pressed" action="toggleFilter" showFilterPanel="showFilterPanel"}}<i class="fa fa-filter"></i>{{/sl-button}}
            {{#sl-tooltip title="Configuration"}}{{sl-grid-header-settings action="bubbleAction" class="btn-group dropdown" settings=options.settingsMenu columns=columns}}{{/sl-tooltip}}
        </div>
    </div>
</header>
